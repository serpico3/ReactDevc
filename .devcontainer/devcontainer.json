{
  "name": "React Dev (Node 20 Alpine - Win11)",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "runArgs": ["-p", "5173:5173", "-p", "8080:8080"],
  "forwardPorts": [5173, 8080],
  
  "portsAttributes": {
    "5173": {
      "label": "Vite Dev Server",
      "onAutoForward": "openBrowser"
    },
    "8080": {
      "label": "App 8080",
      "onAutoForward": "notify"
    }
  },
  
  "postCreateCommand": "sh -c 'if [ ! -f package.json ]; then npm create vite@latest . -- --template react --default; else npm install; fi'",
  "postStartCommand": "npm run dev -- --host 0.0.0.0",
  
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "dsznajder.es7-react-js-snippets",
        "bradlc.vscode-tailwindcss",
        "formulahendry.auto-rename-tag",
        "christian-kohler.npm-intellisense"
      ]
    }
  }
}
